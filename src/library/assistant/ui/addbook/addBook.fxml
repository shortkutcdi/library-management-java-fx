<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="317.0" prefWidth="400.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.assistant.ui.addbook.AddBookController">
   <children>
      <VBox prefHeight="400.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXTextField fx:id="bookTitle" labelFloat="true" promptText="Book Title">
               <VBox.margin>
                  <Insets bottom="22.0" left="10.0" right="10.0" top="18.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="bookId" layoutX="10.0" layoutY="10.0" promptText="Book ID">
               <VBox.margin>
                  <Insets bottom="22.0" left="10.0" right="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="bookAuthor" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Book Author">
               <VBox.margin>
                  <Insets bottom="22.0" left="10.0" right="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="publisher" labelFloat="true" layoutX="10.0" layoutY="36.0" promptText="Publisher">
               <VBox.margin>
                  <Insets bottom="30.0" left="10.0" right="10.0" />
               </VBox.margin>
            </JFXTextField>
            <HBox prefHeight="85.0" prefWidth="400.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <JFXButton fx:id="saveButton" onAction="#saveBook" prefHeight="107.0" prefWidth="211.0" text="Save" />
                  <JFXButton fx:id="cancelButton" layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="91.0" prefWidth="200.0" styleClass="light-button" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
